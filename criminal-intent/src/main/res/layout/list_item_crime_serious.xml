<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/crime_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crime_title" />

        <TextView
            android:id="@+id/crime_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crime_date" />
    </LinearLayout>

    <Button
        android:id="@+id/call_the_police_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_the_police" />
</LinearLayout>